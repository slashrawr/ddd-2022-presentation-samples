clearscreen;
setbackground(0);

make "d 2;
make "m 137.5;
make "c 5*:d;

to point :x :y :a :i
  setpensize 1
  setpencolor 7
  pu
  setxy :x :y
  pd
  repeat 45 [
    fd :d
    rt 8
  ]
End

repeat 1000 [
  localmake "a :m*repcount;
  localmake "rad :c*sqrt(repcount);
  localmake "x cos(:a);
  localmake "y sin(:a);
  make "x :x*:rad;
  make "y :y*:rad;
  point :x :y :a repcount;
]
